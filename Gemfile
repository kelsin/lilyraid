source 'http://rubygems.org'

# Rails
gem 'rails', '3.1.1'

# Accounts from phpbb
gem 'mysql'
gem 'tzinfo'

gem 'icalendar'

# WoW Armory Integration
gem 'httparty'

# gem "thin"
gem "unicorn"

# Haml and Sass
gem 'haml'
gem 'slim'

gem 'thin'
gem 'airbrake'

# jQuery
gem 'jquery-rails', '>= 0.2.6'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.1.4'
  gem 'coffee-rails', '~> 3.1.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'yui-compressor'
end

group :development do
  gem 'capistrano'
  gem 'capistrano-ext'
  gem 'sqlite3', :require => 'sqlite3'
end
